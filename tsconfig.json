{
  "compileOnSave": false,
  "exclude": ["node_modules", "**/*.js"],
  "compilerOptions": {
    "module": "commonjs",
    "jsx": "preserve",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "lib": ["dom", "es2015", "es2016", "es2017"],
    "baseUrl": ".",
    "paths": {
      "@root/*": ["*"]
    }
  }
}
